<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Happy New Year</title>
<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    background: #050505;
    height: 100vh;
    overflow: hidden;
    font-family: 'Arial', sans-serif;
  }

  .hint {
    position: absolute;
    bottom: 90px;
    width: 100%;
    text-align: center;
    color: #777;
    font-size: 14px;
    letter-spacing: 1px;
  }

  .cracker {
    position: absolute;
    bottom: 30px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 42px;
    cursor: pointer;
    transition: transform 0.3s;
    z-index: 10;
  }

  .spark {
    position: absolute;
    width: 4px;
    height: 4px;
    background: gold;
    border-radius: 50%;
    pointer-events: none;
    animation: spark 0.6s linear forwards;
  }

  @keyframes spark {
    from {
      opacity: 1;
      transform: translate(0,0) scale(1);
    }
    to {
      opacity: 0;
      transform: translate(var(--x), var(--y)) scale(0);
    }
  }

  .flash {
    position: fixed;
    inset: 0;
    background: white;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.2s;
    z-index: 20;
  }

  .message {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: #f2f2f2;
    font-size: 20px;
    padding: 30px;
    opacity: 0;
    transition: opacity 1.5s ease;
    z-index: 5;
  }

  .shake {
    animation: shake 0.3s;
  }

  @keyframes shake {
    0% { transform: translate(0,0); }
    25% { transform: translate(-5px,5px); }
    50% { transform: translate(5px,-5px); }
    75% { transform: translate(-5px,-5px); }
    100% { transform: translate(0,0); }
  }
</style>
</head>
<body>

<div class="hint">tap it</div>
<div class="cracker">ðŸ§¨</div>
<div class="flash"></div>

<div class="message">
  <!-- EDIT YOUR MESSAGE HERE LATER -->
  <div>
    <p>Your message goes here.</p>
  </div>
</div>

<script>
  const cracker = document.querySelector('.cracker');
  const hint = document.querySelector('.hint');
  const flash = document.querySelector('.flash');
  const message = document.querySelector('.message');

  let activated = false;

  cracker.addEventListener('click', () => {
    if (activated) return;
    activated = true;
    hint.style.opacity = 0;

    createSparks(cracker);

    let moves = 0;
    const moveInterval = setInterval(() => {
      moves++;
      const x = Math.random() * (window.innerWidth - 60);
      const y = Math.random() * (window.innerHeight - 200);
      cracker.style.left = x + 'px';
      cracker.style.top = y + 'px';
      cracker.style.bottom = 'auto';
      createSparks(cracker);

      if (moves > 6) {
        clearInterval(moveInterval);
        explode();
      }
    }, 300);
  });

  function explode() {
    cracker.style.left = '50%';
    cracker.style.top = '50%';
    cracker.style.transform = 'translate(-50%, -50%) scale(1.3)';

    setTimeout(() => {
      flash.style.opacity = 1;
      document.body.classList.add('shake');
    }, 200);

    setTimeout(() => {
      flash.style.opacity = 0;
      cracker.style.display = 'none';
      message.style.opacity = 1;
    }, 600);
  }

  function createSparks(element) {
    const rect = element.getBoundingClientRect();
    for (let i = 0; i < 12; i++) {
      const spark = document.createElement('div');
      spark.className = 'spark';
      spark.style.left = rect.left + rect.width / 2 + 'px';
      spark.style.top = rect.top + rect.height / 2 + 'px';
      spark.style.setProperty('--x', (Math.random() * 60 - 30) + 'px');
      spark.style.setProperty('--y', (Math.random() * 60 - 30) + 'px');
      document.body.appendChild(spark);
      setTimeout(() => spark.remove(), 600);
    }
  }
</script>

</body>
</html>
